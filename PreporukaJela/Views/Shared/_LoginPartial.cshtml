@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { @class = "nav-link" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Dobrodošli: " + User.Identity.GetUserName() + "!", "Index", "Manage", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">Odjava</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registracija", "Register", "Account", new { area = "" }, new { @class = "nav-link" })</li>
        <li>@Html.ActionLink("Prijava", "Login", "Account", new { area = "" }, new { @class = "nav-link" })</li>
    </ul>
}
